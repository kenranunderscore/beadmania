<Application x:Class="beadmania.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:beadmania.UI.Views"
             xmlns:viewModels="clr-namespace:beadmania.UI.ViewModels"
             xmlns:xamlExtensions="clr-namespace:beadmania.UI.XamlExtensions">
    <Application.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="xamlExtensions:SelectTextOnFocus.IsActive" Value="True" />
        </Style>
        <DataTemplate DataType="{x:Type viewModels:PaletteEditorViewModel}">
            <views:PaletteEditor />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:ColorDialogViewModel}">
            <views:ColorDialog />
        </DataTemplate>
        <Style x:Key="DummyStyleToPreventWpfBug" TargetType="{x:Type Rectangle}" />
    </Application.Resources>
</Application>