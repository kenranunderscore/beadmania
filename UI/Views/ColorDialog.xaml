<UserControl x:Class="beadmania.UI.Views.ColorDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:beadmania.UI.Views"
             xmlns:controls="clr-namespace:beadmania.UI.Controls"
             xmlns:utils="clr-namespace:beadmania.UI.Utils"
             mc:Ignorable="d"
             utils:DialogCloser.DialogResult="{Binding DialogResult}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        
        <controls:ColorPicker Grid.Row="0" SelectedColor="{Binding SelectedColor, Mode=TwoWay}" />
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Width="75" Height="20" Content="Ok" IsDefault="True" Command="{Binding OkCmd, Mode=OneTime}" />
            <Button Grid.Column="1" Width="75" Height="20" Content="Cancel" IsCancel="True" />
        </Grid>
    </Grid>
</UserControl>