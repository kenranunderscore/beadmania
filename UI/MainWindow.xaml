<Window x:Class="beadmania.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:beadmania.UI"
        xmlns:vm="clr-namespace:beadmania.UI.ViewModels"
        xmlns:controls="clr-namespace:beadmania.UI.Controls"
        mc:Ignorable="d"
        Title="beadmania"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <controls:BeadCanvas
        Background="Transparent"
        ImageSource="{Binding Bitmap}"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        ShowGrid="{Binding ShowGrid}" />
</Window>